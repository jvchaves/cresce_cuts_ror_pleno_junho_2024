<p style="color: green"><%= notice %></p>

<h1>Lista de descontos</h1>
<p style="font-size: smaller; font-style: italic;"><%= "Loja: #{@loja.nome} - Nova loja online" %></p>

<div class="card mb-3">
  <div class="container-fluid card-header d-flex justify-content-between align-items-center" style="background-color:white;">
    <h2>Descontos cadastrados</h2>
    <%= link_to "Novo Desconto", new_desconto_path, class: "btn btn-primary" %>
  </div>
  <div class="card-body">
    <%= form_with url: descontos_path, method: :get, local: true do %>
      <div class="card-body d-flex justify-content-between align-items-center">
        <div class="form-group col-md-6">
          <%= label_tag :status, "Status" %>
          <%= select_tag :status, options_for_select(['', 'Ativo', 'Inativo'], params[:status]), class: "form-control" %>
        </div>
        <div class="form-group col-md-6" style="margin-left: 1rem;">
          <%= label_tag :tipo, "Tipo de Desconto" %>
          <%= select_tag :tipo, options_for_select([''] + Desconto.tipos.keys.map { |key| [key.humanize, key] }, params[:tipo]), class: "form-control" %>
        </div>
      </div>
      <%= submit_tag 'Filtrar', data:{turbo: false},class: "btn btn-primary mt-2" %>
    <% end %>
  </div>
  <div>
      <div class="card-header justify-content-between align-items-center">
    <div class="row">
      <div class="col-md-2"><strong>Desconto</strong></div>
      <div class="col-md-2"><strong>Tipo</strong></div>
      <div class="col-md-2"><strong>Data ativação</strong></div>
      <div class="col-md-2"><strong>Data inativação</strong></div>
      <div class="col-md-4"><strong>Status</strong></div>
    </div>
  </div>
    <div id="descontos" class="row">
      <% @descontos.each do |desconto| %>
        <div class="col-md-12">
          <div class="card-body">
            <div class="row">
              <%= render partial: 'desconto', locals: { desconto: desconto } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
