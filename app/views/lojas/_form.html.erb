<div class="card">
  <div class="card-body">
    <%= form_with(model: loja, class: "needs-validation", novalidate: true) do |form| %>
      <% if loja.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h2><%= pluralize(loja.errors.count, "error") %> prohibited this loja from being saved:</h2>

          <ul>
            <% loja.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :nome, class: "form-label" %>
        <%= form.text_field :nome, class: "form-control" %>
      </div>

      <%= form.submit "Salvar", data: { turbo: false }, class: "btn btn-primary me-2" %>
      
      <%= link_to "Home de Lojas", lojas_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
