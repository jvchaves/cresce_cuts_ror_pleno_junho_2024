<div class="card mt-3">
  <div class="card-body">
    <p class="alert"><%= notice %></p>

    <%= render @loja %>

    <div class="d-flex justify-content-between align-items-center mt-3">
      <div>
        <%= link_to "Editar esta loja", edit_loja_path(@loja), class: "btn btn-primary me-2" %> |
        <%= link_to "Voltar para lojas", lojas_path, class: "btn btn-secondary me-2" %>
      </div>

      <%= button_to "Excluir esta loja", @loja, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
