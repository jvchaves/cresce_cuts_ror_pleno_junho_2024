<!DOCTYPE html>
<html>
  <head>
    <title>Vale Vantagens</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      .sidebar {
        width: 256px;
        background-color: #007FBA;
        color: white;
        height: 100vh;
        position: fixed;
      }
      .sidebar a {
        color: white;
      }
      .sidebar a:hover {
        color: white;
      }
      .sidebar .logo {
        padding: 10px;
      }
      .nav-link {
        display: flex;
        align-items: center;
      }
      .nav-link img {
        margin-right: 10px;
      }
      .content {
        margin-left: 256px;
        padding: 20px;
      }
    </style>
  </head>

  <body>
    <div class="sidebar"> 
      <div class="logo text-center">
        <img src="/logo.png" alt="Logo" class="img-fluid">
      </div>
      <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
        <li> <a href="/descontos" class="nav-link py-3 border-bottom"> <img src="/cash_move.svg" class="movimentacao"> <small>Lista Descontos</small> </a> </li>
        <li> <a href="/produtos" class="nav-link py-3 border-bottom"> <img src="/cash_move.svg" class="movimentacao"> <small>Produtos</small> </a> </li>
        <li> <a href="/lojas" class="nav-link py-3 border-bottom"> <img src="/cash_move.svg" class="movimentacao"> <small>Lojas</small> </a> </li>
      </ul>
    </div>

    <div class="content">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </body>
</html>